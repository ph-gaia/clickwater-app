<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/ic_selector_2">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="50.7dp"
            android:layout_gravity="center"
            android:src="@drawable/coffee_cup"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produto"
            android:textSize="12.7sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#484646"
            android:layout_marginTop="5dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_quantity"
            style="@style/EditTextFormField"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_form_field"
            android:text="0"
            android:enabled="false"
            android:imeOptions="actionDone"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="+"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLess"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="â€“"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>